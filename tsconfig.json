    "lib": ["dom", "dom.iterable", "esnext"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "ES2022",
      "moduleResolution": "node",
      "target": "ES2022",
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
