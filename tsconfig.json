      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "es6",
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      }
  },
  "include": ["./src/**/*"]
  }