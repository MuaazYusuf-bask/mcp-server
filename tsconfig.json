{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "ts-node": {
    "compilerOptions": {
    "module": "commonjs",
    "jsx": "react"
    }
    },
    "include": ["**/*"],
    "exclude": ["dist", "node_modules"]
    }